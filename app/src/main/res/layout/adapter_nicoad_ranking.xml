<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_nicoad_ranking_rank_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="1位"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapter_nicoad_ranking_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="名前"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_nicoad_ranking_rank_text_view"
        app:layout_constraintEnd_toStartOf="@+id/adapter_nicoad_ranking_point_text_view"
        app:layout_constraintStart_toEndOf="@+id/adapter_nicoad_ranking_rank_text_view"
        app:layout_constraintTop_toTopOf="@+id/adapter_nicoad_ranking_rank_text_view" />

    <TextView
        android:id="@+id/adapter_nicoad_ranking_point_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="100pt"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_nicoad_ranking_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adapter_nicoad_ranking_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>