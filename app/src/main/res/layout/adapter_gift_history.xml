<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adapter_gift_history_thumb_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapter_gift_history_user_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="なまえ"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_gift_history_thumb_image_view"
        app:layout_constraintEnd_toStartOf="@+id/adapter_gift_history_point_text_view"
        app:layout_constraintStart_toEndOf="@+id/adapter_gift_history_thumb_image_view"
        app:layout_constraintTop_toTopOf="@+id/adapter_gift_history_thumb_image_view" />

    <TextView
        android:id="@+id/adapter_gift_history_point_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="50pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>