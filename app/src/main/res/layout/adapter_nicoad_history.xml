<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/adapter_nicoad_history_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="名前"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapter_nicoad_history_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="メッセージ"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/adapter_nicoad_history_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/adapter_nicoad_history_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/adapter_nicoad_history_name_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>